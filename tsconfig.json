{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "emitDeclarationOnly": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "__tests__/*": ["__tests__/*"],
      "types/*": ["types/*"],
      "hooks/*": ["hooks/*"]
    },
    "types": ["axios", "react", "node"]
  },
  "main": "./src/index.ts",
  "include": ["src"],
  "exclude": ["node_modules"]
}
